Bootstrap: docker
From: chromadb/chroma:latest

%post
    # Install any additional dependencies if needed
    echo "ChromaDB container built successfully"

%runscript
    # Start ChromaDB server with GPU support
    exec chroma run --host 0.0.0.0 --port 8001

%labels
    Author Team6
    Version 0.2.0
    Description ChromaDB vector database for benchmarking with GPU support

%help
    This container runs the ChromaDB vector database service with GPU support.
    Usage:
        apptainer run --nv chromadb.sif
    
    Note: Use --nv flag to enable NVIDIA GPU support
